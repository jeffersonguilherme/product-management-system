@using Dto.Produto
@model EditarProdutoDto

<div class="container mt-5">
    <form asp-action="Editar" asp-controller="Produto" method="post" enctype="multipart/form-data">
        <h2>Edição de Produtos - @Model.NomeProduto</h2>

        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="Foto">

        <div class="mb-1">
            <label class="form-label">Foto:</label>
            <input class="form-control shadow-none" type="file" name="foto">
        </div>

        <div class="mb-1">
            <label class="form-label">Nome:</label>
            <input class="form-control shadow-none" type="text"asp-for="NomeProduto">
            <span asp-validation-for="NomeProduto"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Marca:</label>
            <input class="form-control shadow-none" type="text" asp-for="Marca">
            <span asp-validation-for="Marca"></span>

        </div>

        <div class="mb-1">
            <label class="form-label">Valor:</label>
            <input class="form-control shadow-none" type="number" min="1" step="any" asp-for="Valor">
            <span asp-validation-for="Valor"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Quantidade:</label>
            <input class="form-control shadow-none" type="number" min="1" step="any" asp-for="QuantidadeEstoque">
            <span asp-validation-for="QuantidadeEstoque"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Categoria:</label>
            <select asp-for="CategoriaId"
                    class="form-select"
                    asp-items="@(new SelectList(ViewBag.Categorias,"Id","NomeCategoria", Model.CategoriaId))"
                    >
            </select>
            <span asp-validation-for="CategoriaId"></span>
        </div>
        
        <div class="d-flex mt-3">
            <button type="submit" class="btn btn-success w-50 mx-1"><i class="bi bi-plus-circle"></i> Editar</button>
            <a asp-action="Index" class="btn btn-info w-50"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
        </div> 
    </form>
</div>