@using Dto.Produto
@model ProdutoCriacaoDto

@if(TempData["MensagemSucesso"] != null){
    <div class = "alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if(TempData["MensagemErro"] != null){
    <div class = "alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="container mt-5">
    <form asp-action="Cadastrar" asp-controller="Produto" method="post" enctype="multipart/form-data">
        <h2>Cadastro de Produtos</h2>

        <div class="mb-1">
            <label class="form-label">Foto:</label>
            <input class="form-control shadow-none" type="file" name="foto">
        </div>

        <div class="mb-1">
            <label class="form-label">Nome:</label>
            <input class="form-control shadow-none" type="text"asp-for="NomeProduto">
            <span asp-validation-for="NomeProduto" class="text-danger"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Marca:</label>
            <input class="form-control shadow-none" type="text" asp-for="Marca">
            <span asp-validation-for="Marca"  class="text-danger"></span>

        </div>

        <div class="mb-1">
            <label class="form-label">Valor:</label>
            <input class="form-control shadow-none" type="number" min="1" step="any" asp-for="Valor">
            <span asp-validation-for="Valor"  class="text-danger"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Quantidade:</label>
            <input class="form-control shadow-none" type="number" min="1" step="any" asp-for="QuantidadeEstoque">
            <span asp-validation-for="QuantidadeEstoque"  class="text-danger"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Categoria:</label>
            <select asp-for="CategoriaId"
                    class="form-select"
                    asp-items="@(new SelectList(ViewBag.Categorias,"Id","NomeCategoria"))"
                    >
            </select>
            <span asp-validation-for="CategoriaId"  class="text-danger"></span>
        </div>
        
        <div class="d-flex mt-3">
            <button type="submit" class="btn btn-success w-50 mx-1"><i class="bi bi-plus-circle"></i> Cadastrar</button>
            <a asp-action="Index" class="btn btn-info w-50"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
        </div> 
    </form>
</div>