@using Models
@model List<ProdutoModel>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Listagem de Produtos!</h2>
        <a asp-action="Cadastrar" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Cadastrar novo produto</a>
    </div>
    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th></th>
                <th>Nome</th>
                <th>Marca</th>
                <th>Categoria</th>
                <th>Quantidade</th>
                <th>Valor</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @if(Model.Count() > 0){
                @foreach(var produto in Model){
                    <tr>
                        @if(produto.Foto != null){
                            <td><img src="~/imagem/@produto.Foto"/></td>
                        }else{
                            <td></td>
                        }

                        <td>@produto.NomeProduto</td>
                        <td>@produto.Marca</td>
                        <td>@produto.Categoria.NomeCategoria</td>
                        <td>@produto.QuantidadeEstoque</td>
                        <td>R$ @produto.Valor.ToString("F")</td>
                        <td>
                            <a href="" class="btn btn-info"><i class="bi bi-pencil"></i> Editar</a>
                            <a href="" class="btn btn-danger"><i class="bi bi-trash3"></i> Remove</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>